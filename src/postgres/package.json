{
  "name": "@dandeliongold/server-postgres",
  "version": "0.6.2",
  "description": "MCP server for interacting with PostgreSQL databases. This server is a fork of @modelcontextprotocol/servers by Anthropic, PBC.",
  "license": "MIT",
  "author": "Dandelion Gold, LLC (forked from original package by Anthropic, PBC)",
  "homepage": "https://dandeliongold.com",
  "bugs": "https://github.com/dandeliongold/servers/issues",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "mcp-server-postgres": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "test": "cd ../.. && node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js src/postgres --no-cache"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.4.7",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.11.11",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.2"
  }
}
